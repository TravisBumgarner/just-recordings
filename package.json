{
  "name": "just-recordings",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev -w @just-recordings/api",
    "dev:web": "npm run dev -w @just-recordings/web",
    "dev:desktop": "npm run dev -w @just-recordings/desktop",
    "build": "npm run build --workspaces --if-present",
    "build:desktop": "npm run build -w @just-recordings/desktop",
    "test": "npm run test --workspaces --if-present",
    "test:desktop": "npm run test -w @just-recordings/desktop",
    "test:recorder": "npm run test -w @just-recordings/recorder"
  },
  "devDependencies": {
    "concurrently": "8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
