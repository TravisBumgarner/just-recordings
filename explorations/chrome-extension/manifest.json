{
  "manifest_version": 3,
  "name": "Just Recordings - Screen Recorder",
  "description": "Screen recording prototype extension",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Just Recordings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
